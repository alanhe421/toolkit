<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@a/subscribe_item_drag_stroke" android:dashWidth="4dp" android:dashGap="2dp" />
                    <solid android:color="@a/subscribe_item_drag_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@a/subscribe_item_selected_stroke" />
            <solid android:color="@a/subscribe_item_selected_bg" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dp" android:color="@a/subscribe_item_disabled_stroke" />
            <solid android:color="@a/subscribe_item_disabled_bg" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@a/subscribe_item_pressed_stroke" />
            <solid android:color="@a/subscribe_item_pressed_bg" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="@a/subscribe_item_normal_stroke" />
            <solid android:color="@a/subscribe_item_normal_bg" />
        </shape>
    </item>
</selector>
